        <item name="actionModeBackground">@color/actionModeBackgroundColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" /> <!-- TODO ? -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" /> <!-- TODO ? -->
